@using EntityLayer.Concrete
@model List<Skill>

<div class="section px-3 px-lg-4 pt-5" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">My Skills</h2>
        </div>
        <div class="text-center">
            <p class="mx-auto mb-3" style="max-width:600px">
                Aşağıda bildiğim programlama dilleri ve teknolojiler üzerine bir bar listesi bulunmaktadır. Yeni bir programlama dili öğrenmek benim için oldukça hızlı gerçekleşen bir durumdur.
            </p>
        </div>
        <div class="bg-light p-3">
            <div class="row">
                <!-- Sol sütun -->
                <div class="col-md-6">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        if (i < 5) // İlk 5 eleman
                        {
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder">
                                    <span class="me-auto">@Model[i].Title</span>
                                    <span>@($"{Model[i].Value}%")</span>
                                </div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar"
                                         style="width: @Model[i].Value%"
                                         aria-valuenow="@Model[i].Value" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Sağ sütun -->
                <div class="col-md-6">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        if (i >= 5) // Sonraki 5 eleman
                        {
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder">
                                    <span class="me-auto">@Model[i].Title</span>
                                    <span>@($"{Model[i].Value}%")</span>
                                </div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar"
                                         style="width: @Model[i].Value%"
                                         aria-valuenow="@Model[i].Value" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
